<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agrotech.Paginas">

    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Spacing="10">

        <Button 
            Text="Cadastrar Insumo"
            WidthRequest="150"
            HeightRequest="60"
            BackgroundColor="#32CD32" 
            Clicked="Button_Clicked_Insumo"/>

        <Button 
            Text="Cadastrar Produto"
            WidthRequest="150"
            HeightRequest="60"
            BackgroundColor="#32CD32" 
            Clicked="Button_Clicked_Produto"/>

        <Button 
            Text="Retirar Insumo"
            WidthRequest="150"
            HeightRequest="60"
            BackgroundColor="#32CD32" 
            Clicked="Button_Clicked_Retirar_insumo"/>

    </VerticalStackLayout>

</ContentPage>
